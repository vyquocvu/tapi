{
  "version": 2,
  "buildCommand": "rm -rf node_modules/.prisma node_modules/@prisma/client && npm ci && npm run prisma:generate && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "false"
  }
}
