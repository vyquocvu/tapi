# Database Configuration
DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration (optional)
PORT=5173
NODE_ENV=development

# Runtime Environment
# Options: "dev" (Vite), "node" (Express), "vercel" (Serverless)
RUNTIME=dev

# Storage Configuration
# Provider: "local", "s3", or "gcs"
STORAGE_PROVIDER=local

# Local Storage (when STORAGE_PROVIDER=local)
LOCAL_UPLOAD_DIR=./uploads
LOCAL_BASE_URL=http://localhost:5173

# AWS S3 Storage (when STORAGE_PROVIDER=s3)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_S3_BUCKET=your-bucket-name

# Google Cloud Storage (when STORAGE_PROVIDER=gcs)
# GCS_PROJECT_ID=your-project-id
# GCS_BUCKET=your-bucket-name
# GCS_KEY_FILE=path/to/service-account-key.json
